<h2>Welcome!</h2>

<%= form_for @user, :url => {:action=>"create", :controller=>"users/confirmations"}, :html => { :method => :post } do |form| %>
	<% if @user.errors.any? %>
		<%= render :partial => 'partials/errors', :locals => {:objects => [@user]}%>
	<% end %>
	<p>
		<%= form.label :username %><br />
		<%= form.text_field :username %>
		<%= render :partial => 'partials/error_message', :locals => {:object => @user, :attribute => :username}%>
	</p>
	<p>
		<%= form.label :password %><br />
		<%= form.text_field :password %>
		<%= render :partial => 'partials/error_message', :locals => {:object => @user, :attribute => :password}%>
	</p>
	<p>
		<%= form.label :password_confirmation, 'Password Confirmation' %><br />
		<%= form.text_field :password_confirmation %>
		<%= render :partial => 'partials/error_message', :locals => {:object => @user, :attribute => :password_confirmation}%>
	</p>
	<%= form.hidden_field :email %>
	<%= render :partial => 'partials/error_message', :locals => {:object => @user, :attribute => :email} %>
	<%= hidden_field_tag :confirmation_token, @user.confirmation_token %>
	
	<%= form.submit "Register" %>
<% end %>