<h2><%= @user.username %></h2>
<p>
	<b>E-mail:</b>
	<%= @user.email%>
</p>
<p><%= link_to 'Edit E-mail and Password', edit_user_path(@user) %></p>

<h2>Account Activity</h2>

<p>
  <b>Login count:</b>
  <%= @user.login_count %>
</p>
<p>
  <b>Last request at:</b>
  <%= @user.last_request_at %>
</p>
<p>
  <b>Last login at:</b>
  <%= @user.last_login_at %>
</p>
<p>
  <b>Current login at:</b>
  <%= @user.current_login_at %>
</p>
<p>
  <b>Last login ip:</b>
  <%= @user.last_login_ip %>
</p>
<p>
  <b>Current login ip:</b>
  <%= @user.current_login_ip %>
</p>